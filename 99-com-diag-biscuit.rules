ACTION=="add", SUBSYSTEM=="block", KERNEL=="sd[b-z][1-9]", RUN+="/bin/mkdir -p /media/%k", RUN+="/bin/mount -t auto -o async,relatime /dev/%k /media/%k", RUN+="/usr/local/bin/biscuit -C /media/%k -f /media/%k/biscuit.bin", RUN+="/bin/umount /media/%k", RUN+="/bin/rmdir /media/%k"
ACTION=="remove", SUBSYSTEM=="block", KERNEL=="sd[b-z][1-9]", RUN+="/bin/umount /media/%k", RUN+="/bin/rmdir /media/%k"